<script>

  $('dd').hide();
  $('.FAQ_question').hide();

  $(document).ready(function (e){
    $("#toutes").click(function(e){
      $('.open-mission').fadeIn();
      $('.closed-mission').fadeIn();
    })
    $("#ouvertes").click(function(e){
      $('.open-mission').fadeIn();
      $('.closed-mission').fadeOut();
    })
    $("#fermées").click(function(e){
      $('.open-mission').fadeOut();
      $('.closed-mission').fadeIn();
    })

    $('.FAQ_question').click(function() {
      var answer = $(this).next('.dd');
      if (answer.is(":visible")){
        return;
      }else{
        var toggle = $(this).nextUntil('.FAQ_question');
        $('.FAQ_answer').not(toggle).slideUp();
        $('.FAQ_question').removeClass('FAQ_question_active');
        $(this).addClass('FAQ_question_active');
        toggle.slideDown();
      };
    });
    $('.FAQ_section_title').click(function() {
      $('.FAQ_question').slideUp();
      $('.FAQ_answer').slideUp();
      $('.FAQ_section_title_active').addClass('FAQ_section_title');
      var others = $('.FAQ_section_title');
      others.removeClass('FAQ_section_title_active');
      $(this).addClass('FAQ_section_title_active');
      $(this).parent().find(".FAQ_question").slideDown();
      $(".FAQ_section").not(this.parent()).find(".FAQ_question").slideUp();
    });

    $(".pinned").pin({padding: {top: 200}, containerSelector: ".wrapper"})
  });
</script>
<% end %>


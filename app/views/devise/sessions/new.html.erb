<div class='form-banner' style="background-image: linear-gradient(-200deg, rgba(0,0,0,0.3) 5%, rgba(0,0,0,0.1) 100%), url(http://s3-eu-west-1.amazonaws.com/fovento/images/workers2.jpg)">
  <div class='form-box padded'>
    <div class='background'>
      <div class='form text-center'>

        <!-- <h2>Connection</h2> -->

        <%= render "devise/shared/social_logins" %>
        <div class="form-hint">
          <p>rapide, pas besoin de mot de passe</p>
        </div>
        <br>
        <br>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false, label: "Mot de passe" %>

        </div>
        <div class="form-actions">
          <%= f.button :submit, "Connexion sans LinkedIn", class: "btn-xs" %>
        </div>
        <br>
        <br>

        <!--  <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" %> -->
        <% end %>
        <br />
        <div class="form_options">
          <%= render "devise/shared/links" %>
        </div>

        <div class="form-hint" style="margin-top: 10px; margin-bottom: -35px;">
          <p>Se connecter implique d'accepter les <%= link_to "Conditions d'utilisation", terms_and_conditions_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>


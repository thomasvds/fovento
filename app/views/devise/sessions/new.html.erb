<div class='form-banner' style="background-image: linear-gradient(-200deg, rgba(0,0,0,0.3) 5%, rgba(0,0,0,0.1) 100%), url(<%= image_path("workers2.jpg") %>)">
  <div class='form-box padded'>
    <div class='background'>
      <div class='form text-center'>

        <h2>Connection</h2>
        <br />
        <%= render "devise/shared/social_logins" %>
        <br />

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false, label: "Mot de passe" %>
          <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Connection" %>
        </div>
        <% end %>
        <br />
        <div class="form_options">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>


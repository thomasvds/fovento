<div class="navbar-wagon navbar-wagon-fixed">
  <!-- Logo -->
  <%= link_to image_tag('fovento-logo-long.png'), home_volunteers_path, class: "navbar-wagon-brand" %>

  <!-- Right Navigation, hidden on mobile -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Text link -->
    <%= link_to "LES MISSIONS", missions_path, class: "navbar-wagon-item navbar-wagon-link"%>

    <!-- Text link -->
    <%= link_to "COMMENT ÇA MARCHE", how_it_works_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Text link -->
    <%= link_to "COMMUNAUTÉ & IMPACT", community_and_impact_path, class: "navbar-wagon-item navbar-wagon-link"%>

    <!-- Call-to-actions -->
    <% if volunteer_signed_in? %>
      <%= link_to destroy_volunteer_session_path, :method => :delete do %>
        <span class="fa fa-lock" style="color: gray"></span>
      <% end %>
      <%= link_to 'DASHBOARD', dashboard_path, class: 'navbar-wagon-item navbar-wagon-button btn' %>
    <% else %>
      <%= link_to 'CONNECT', new_volunteer_session_path, class: 'navbar-wagon-item navbar-wagon-button btn' %>
    <% end %>
  </div>
  <!-- end of right navigation -->

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Missions</a></li>
        <li><a href="#">Communauté & impact</a></li>
        <li><a href="#">Comment ça marche</a></li>
        <li><a href="#">Ressources</a></li>
        <li><a href="#">Mon profil</a></li>
        <li><a href="#">Paramètres</a></li>
        <li><a href="#">Log out</a></li>
      </ul>
    </div>
  </div>
  <!-- end of mobile-only dropdown -->
</div>
